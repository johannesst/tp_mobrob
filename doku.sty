        \@eqnsel%
        \hskip\@centering
            $\displaystyle\tabskip\z@{##}$&%
        \global\@eqcnt\@ne
            %\hskip 2\arraycolsep%
        \hfil${{}##{}}$\hfil&%
        \global\@eqcnt\tw@%
        %\hskip 2\arraycolsep%
        $\displaystyle\tabskip\z@{##}$%
        \hfil%
        \tabskip\@centering&%
        \llap{##}%
        \tabskip\z@%
        \cr%
}

